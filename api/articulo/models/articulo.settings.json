{
  "kind": "collectionType",
  "collectionName": "articulos",
  "info": {
    "name": "articulo",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string"
    },
    "descripcion": {
      "type": "richtext"
    },
    "tag": {
      "type": "string"
    },
    "meta": {
      "type": "component",
      "repeatable": true,
      "component": "informacion.meta"
    },
    "autor": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articulos"
    },
    "imagen": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "fecha": {
      "type": "date"
    }
  }
}
